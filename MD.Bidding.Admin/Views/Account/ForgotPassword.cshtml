@model MD.Bidding.Admin.Models.ForgotPasswordViewModel

@{
    ViewBag.Title = "ForgotPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="login-container">
    <div class="row">
        <div class="col-md-12">
            <div class="text-center m-b-md">
                <h3>@ViewBag.Title</h3>
            </div>
            <div class="hpanel">
                <div class="panel-body">
                    @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        <p>To reset your password, enter the email address you use to sign in to Integrated Auction &amp; Bidding System. <a href="/Account/Login">Login into  Integrated Auction &amp; Bidding System</a></p>
                        <hr />

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-9">
                                @Html.ValidationSummary("", new { @class = "text-danger" })

                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeHolder = "Your email address" })
                            </div>
                        </div>
                        <div class="clear10"></div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" class="btn btn-default" value="Email Link" />

                                @Html.ActionLink("Back to Login", "Login")
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

